<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:scrollbars="none"
    tools:context=".fragments.MainActivityFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_m"
        android:layout_marginRight="@dimen/margin_m"
        android:orientation="vertical"
        android:focusable="true"
        android:focusableInTouchMode="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/p1"
            android:layout_marginTop="@dimen/margin_m"
            android:lineSpacingMultiplier="1.2"
            android:textSize="@dimen/text_size_m"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/p2"
            android:layout_marginTop="@dimen/margin_m"
            android:layout_marginBottom="@dimen/margin_m"
            android:lineSpacingMultiplier="1.2"
            android:textSize="@dimen/text_size_m"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/image_1"
            android:layout_marginTop="@dimen/margin_m"
            android:layout_marginBottom="@dimen/margin_m"
            android:scaleType="centerCrop"/>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_s">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Your email address"
                android:inputType="textEmailAddress"/>
        </android.support.design.widget.TextInputLayout>


        <EditText
            android:id="@+id/et_dob"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Your date of birth"
            android:layout_marginTop="@dimen/text_size_m"
            android:focusableInTouchMode="false"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Your Occupation: "
            android:textColor="@android:color/black"
            android:layout_marginTop="@dimen/margin_m"
            android:layout_marginLeft="4dp"
            android:textSize="@dimen/text_size_m"/>
        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Software Developer"
                android:layout_marginTop="@dimen/margin_s"/>
            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Designer"
                android:layout_marginTop="@dimen/margin_s"/>
            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Student"
                android:layout_marginTop="@dimen/margin_s"/>
        </RadioGroup>
        <CheckBox
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Have you ever done anything related to IoT?"
            android:layout_marginTop="@dimen/margin_m"
            android:textSize="@dimen/text_size_m"/>
        <Switch
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Would you like to get notification from Phandeeyar when events like this happen again?"
            android:layout_marginTop="@dimen/margin_m"
            android:layout_marginLeft="4dp"
            android:paddingRight="8dp"
            android:textSize="@dimen/text_size_m"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Put this event into:"
            android:textColor="@android:color/black"
            android:layout_marginTop="@dimen/margin_m"
            android:layout_marginLeft="4dp"
            android:textSize="@dimen/text_size_m"/>

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/calendar_type"
            android:layout_marginTop="@dimen/margin_m"
            style="@style/Base.Widget.AppCompat.Spinner.Underlined">
        </Spinner>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:backgroundTint="@color/colorAccent"
            android:layout_gravity="right"
            android:layout_marginTop="@dimen/margin_m"
            android:layout_marginBottom="@dimen/margin_m"
            android:text="Register"/>
    </LinearLayout>

</ScrollView>

